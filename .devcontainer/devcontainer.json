{
	"name": "Azure Architecture Toolkit Dev Container",
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"hostRequirements": {
	  "cpus": 4,
	  "memory": "8gb",
	  "storage": "32gb"
	},
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"installBicep": true,
			"version": "latest"
		}
	},
	"waitFor": "onCreateCommand",
	"updateContentCommand": "python3 -m pip install -r requirements.txt",
	"postCreateCommand": "",
	"customizations": {
	  "codespaces": {
		"openFiles": []
	  },
	  "vscode": {
		"extensions": [
		  "ms-toolsai.jupyter",
		  "ms-python.python"
		]
	  }
	}
}
